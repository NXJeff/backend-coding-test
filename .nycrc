{
    "check-coverage": true,
    "all": true,
    "include": [
        "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "exclude": [
        "src/_tests_/**/*.*"
    ],
    "reporter": [
        "html",
        "lcov",
        "text",
        "text-summary"
    ],
    "report-dir": "coverage"
}